{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/trpc": "^1.1.0",
    "@neondatabase/serverless": "^1.0.1",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "better-auth": "^1.3.9",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.3",
    "elysia": "^1.3.21",
    "ws": "^8.18.3",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/ws": "^8.18.1"
  }
}
